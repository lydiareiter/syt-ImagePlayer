<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPane" prefHeight="600.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.imageplayer.ImagePlayerController">
   <top>
      
          <Label fx:id="welcomeText" text="Image Player" BorderPane.alignment="CENTER">
         <font>
            <Font size="36.0" />
         </font></Label>
   </top>
   <bottom>
      <FlowPane alignment="CENTER" hgap="10.0" prefHeight="40.0" prefWidth="480.0" vgap="10.0" BorderPane.alignment="CENTER">
         <children>
                <Button onAction="#onLoadClicked" prefWidth="118.0" text="Load Image" />
            <Label fx:id="filepath" text="Label" />
            <Button mnemonicParsing="false" text="Button" />
            <Button mnemonicParsing="false" text="Button" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
      </FlowPane>
   </bottom>
   <center>
      <ImageView fx:id="imageview" fitHeight="335.0" fitWidth="390.0" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER" />
   </center>
   </BorderPane>
